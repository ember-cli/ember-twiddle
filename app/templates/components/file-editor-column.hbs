<div class="header">

  <ul class="nav nav-pills file-menu">
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        {{file.filePath}} <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
      {{#each file in allFiles}}
	      <li><a {{action 'selectFile' file}}>{{file.filePath}}</a></li>
      {{/each}}
      </ul>
    </li>
  </ul>
</div>
{{ivy-codemirror
    value         = file.content
    mode          = file.editorMode
    lineNumbers   = true
    fixedGutter   = true
    lineWrapping	= true
    tabSize				= 2}}
